# Check if .htaccess is being processed
<IfModule mod_rewrite.c>
    # Enable the rewrite engine
    RewriteEngine On
    
    # Set the base directory if the app is in a subdirectory
    # RewriteBase /
    
    # Redirect any API calls to the API router
    RewriteRule ^api/(.*) api/index.php?endpoint=$1 [QSA,L]
    
    # Route all non-file/directory requests to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Prevent directory listings
Options -Indexes

# Set default character encoding
AddDefaultCharset UTF-8

# PHP settings
<IfModule mod_php7.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule> 